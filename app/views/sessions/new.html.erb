<h1>Вхід до акаунту</h1>

<%= form_with url: login_path, local: true do |f| %>
  <div>
    <%= label_tag :email %><br>
    <%= email_field_tag :email, params[:email], required: true %>
  </div>

  <div>
    <%= label_tag :password %><br>
    <%= password_field_tag :password, nil, required: true %>
  </div>

  <div>
    <%= submit_tag "Увійти" %>
  </div>
<% end %>
