<p style="color: green"><%= notice %></p>

<h1><%= @course.title %></h1>
<p><%= @course.description %></p>

<%= link_to "Edit this course", edit_course_path(@course) %> |
<%= link_to "Back to courses", courses_path %>

<% if current_user&.role == "teacher" && @course.user == current_user %>
  <%= link_to "Додати урок", new_course_lesson_path(@course), class: "btn btn-primary" %>
<% end %>

<ul>
  <% @lessons.each do |lesson| %>
    <li><%= link_to lesson.title, course_lesson_path(@course, lesson) %></li>
  <% end %>
</ul>
